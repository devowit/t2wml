    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "application.py",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "5000"
            ],
            "cwd": "${workspaceFolder}\\backend",
            "jinja": true
        },
        {
            "name": "Create Package",
            "type": "python",
            "request": "launch",
            "program": "prepare-standalone-deployment.py",
            "args": [
                "--version",
                "2.0a12",
            ],
            "cwd": "${workspaceFolder}",
            "jinja": true
        },
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
               //"unit_tests.test_rdf_generation",
                "unit_tests.test_driver_import", 
                "unit_tests.test_kgtk_results", 
                "unit_tests.test_json_results"
            ],
            "cwd": "${workspaceFolder}\\backend",
        },
    ]
}